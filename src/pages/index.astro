---
import { changeLanguage, setDefaultNamespace, t } from 'i18next'
import Base from '@layouts/Base.astro'
import Header from '@components/Header.astro'
import Section from '@components/sections/Section.astro'
import SmallSection from '@components/sections/Small.astro'
import Contact from '@components/sections/Contact.astro'

changeLanguage('fr')

setDefaultNamespace('home')
const content = {
  title: t('title'),
  tspan: t('tspan'),
  description: t('description'),
  hCTA: t('hCTA'),
  hCTAUrl: t('hCTAUrl'),
  hBtn: t('hBtn'),
  hBtnUrl: t('hBtnUrl'),
  newResources: t('newResources'),
  blogDescription: t('blogDescription'),
  blogCTA: t('blogCTA'),
  contactDescription: t('contactDescription'),
  contactCTA: t('contactCTA'),
  stack: t('stack'),
  stackDescription: t('stackDescription'),
  stackCTA: t('stackCTA'),
}
---

<Base forceUseDefaultOgTitle title={content.title}>
  <Header
    title={content.title}
    span={content.tspan}
    description={content.description}
    hCTA={content.hCTA}
    hCTAUrl={content.hCTAUrl}
    hBtn={content.hBtn}
    hBtnUrl={content.hBtnUrl}
  />
  <Section heading title={content.newResources} />
  <SmallSection title="Blog" description={content.blogDescription} btn={content.blogCTA} btnUrl="/blog"/>
  <Contact description={content.contactDescription} Btn={content.contactCTA}/>
  <SmallSection title={content.stack} description={content.stackDescription} btn={content.stackCTA} btnUrl="/stack" />
</Base>
