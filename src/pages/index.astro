---
import { changeLanguage, setDefaultNamespace, t } from 'i18next'
import Base from '@layouts/Base.astro'
import Header from '@components/Header.astro'
import Section from '@components/sections/Section.astro'
import SmallSection from '@components/sections/Small.astro'
import Contact from '@components/sections/Contact.astro'

changeLanguage('fr')

setDefaultNamespace('home')
const content = {
  title: t('title'),
  htitle: t('htitle'),
  tspan: t('tspan'),
  description: t('description'),
  hCTA: t('hCTA'),
  hBtn: t('hBtn'),
  newProjects: t('newProjects'),
  blogDescription: t('blogDescription'),
  blogCTA: t('blogCTA'),
  contactDescription: t('contactDescription'),
  contactCTA: t('contactCTA'),
  stack: t('stack'),
  stackDescription: t('stackDescription'),
  stackCTA: t('stackCTA'),
}
---

<Base forceUseDefaultOgTitle title={content.title}>
  <Header
    title={content.htitle}
    span={content.tspan}
    description={content.description}
    hCTA={content.hCTA}
    hCTAUrl="/about"
    hBtn={content.hBtn}
    hBtnUrl="mailto:kylianb1@icloud.com"
  />
  <Section heading title={content.newProjects} />
  <SmallSection
    title="Blog"
    description={content.blogDescription}
    btn={content.blogCTA}
    btnUrl="/blog"
  />
  <Contact description={content.contactDescription} Btn={content.contactCTA} />
  <SmallSection
    title={content.stack}
    description={content.stackDescription}
    btn={content.stackCTA}
    btnUrl="/stack"
  />
</Base>
