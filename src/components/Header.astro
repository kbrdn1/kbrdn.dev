---
import CTABtn from '@components/buttons/CTA.astro'
import SecondaryBtn from '@components/buttons/Secondary.astro'

export interface Props {
  title: string
  span: string
  description: string
  hCTA: string
  hCTAUrl: string
  hBtn: string
  hBtnUrl: string
}

const { title, span, description, hCTA, hCTAUrl, hBtn, hBtnUrl } = Astro.props as Props
---

<header class="w-full text-white flex flex-col md:px-[12px] gap-[24px]">
  <h1 class="text-[40px] flex flex-col sm:block font-semibold leading-[44px]">
    {title}&nbsp;<span
      class="bg-clip-text text-transparent w-fit bg-gradient-to-r from-white to-accent font-[700]"
      >{span}</span
    >
  </h1>
  <p class="text-[16px]">{description}</p>
  <div class="flex gap-[16px] pt-[6px]">
    <CTABtn url={hCTAUrl}>{hCTA}</CTABtn>
    <SecondaryBtn url={hBtnUrl} icon ext>{hBtn}</SecondaryBtn>
  </div>
</header>
