---
import { localizePath } from 'astro-i18next'
import { Image } from '@astrojs/image/components'

export interface Props {
  title: string
  description: string
  tags?: string[]
  hero: string
  heroFormat: string
  heroAlt: string
  url: string
  ext?: boolean
}

const { title, description, tags, hero, heroAlt, heroFormat, url, ext } = Astro.props as Props
console.log(tags?.splice(0,3))
---

<a href={ext ? url : localizePath(url)} class="p-[4px] overflow-hidden" target={ext ? '_blank' : '_self'}>
  <div
    class="flex p-[12px] gap-[20px] rounded-[6px] hover:bg-black-2 h-full transition-all"
  >
    <Image
      src={hero}
      width={200}
      height={150}
      alt={heroAlt}
      format={heroFormat}
      class="rounded-[6px]"
    />
    <div class="flex flex-col gap-[4px] text-[14px] justify-between">
      <div class="flex flex-col gap-[4px] ">
        <p class="text-white">{title}</p>
        <p class="text-grey-1">{description}</p>
      </div>
      <div class="flex gap-[6px]">
        {tags?.splice(0,3).map((tag) => (
        <p class="text-grey-1 w-fit h-fit border border-black-3 rounded-[6px] flex text-[10px] py-[4px] px-[12px]">{tag}</p>
      ))
      }
      </div>
    </div>
  </div>
</a>
