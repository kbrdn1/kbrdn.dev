---
import { t, setDefaultNamespace } from 'i18next'
setDefaultNamespace('footer')

const content = {
  build: t('build'),
  hosted: t('hosted'),
}

let year = new Date().getFullYear()
---

<footer
  class="xl:ml-[244px] flex flex-col lg:flex-row text-center justify-center gap-[24px] p-[32px] text-[16px] text-white border-t border-black-3"
>
  <p>
    {content.build}
    <a href="https://astro.build" class="text-grey-1 hover:text-white transition-all"
      >{Astro.generator}</a
    >
  </p>
  <span class="text-grey-1 hidden lg:block">°</span>
  <p>
    {content.hosted}
    <a href="https://vercel.com" class="text-grey-1 hover:text-white transition-all"
      >Vercel</a
    >
  </p>
  <span class="text-grey-1 hidden lg:block">°</span>

  <p class="text-grey-1">©{year} Kylian Bardini</p>
</footer>
